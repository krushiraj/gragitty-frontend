{
  "name": "gragitty-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@bearer/js": "^1.13.10",
    "@bearer/node": "^2.0.0",
    "@bearer/react": "^1.13.10",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-link": "^1.2.13",
    "apollo-link-error": "^1.1.12",
    "apollo-link-http": "^1.5.16",
    "axios": "^0.19.0",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "react": "^16.11.0",
    "react-apollo": "^3.1.3",
    "react-dom": "^16.11.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "styled-components": "^4.4.0"
  },
  "scripts": {
    "build:styles": "postcss src/styles/index.css -o src/index.css",
    "watch:styles": "postcss src/styles/index.css -o src/index.css -w",
    "start": "react-scripts start && npm run watch:styles",
    "build": "npm run build:styles && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.7.1",
    "postcss-cli": "^6.1.3",
    "tailwindcss": "^1.1.3"
  }
}
